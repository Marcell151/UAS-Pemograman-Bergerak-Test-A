<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Menu Name -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Menu"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/text_dark"
            android:layout_marginBottom="8dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/light_gray"
            android:layout_marginBottom="16dp">

            <EditText
                android:id="@+id/etMenuName"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:hint="Contoh: Nasi Ayam Geprek"
                android:inputType="textCapWords"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:background="@android:color/transparent"
                android:textSize="15sp"
                android:maxLength="100"/>

        </androidx.cardview.widget.CardView>

        <!-- Price -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Harga (Rp)"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/text_dark"
            android:layout_marginBottom="8dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/light_gray"
            android:layout_marginBottom="16dp">

            <EditText
                android:id="@+id/etMenuPrice"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:hint="Contoh: 15000"
                android:inputType="number"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:background="@android:color/transparent"
                android:textSize="15sp"
                android:maxLength="10"/>

        </androidx.cardview.widget.CardView>

        <!-- Category -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kategori Menu"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/text_dark"
            android:layout_marginBottom="12dp"/>

        <RadioGroup
            android:id="@+id/rgCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/light_gray"
                android:layout_marginBottom="8dp">

                <RadioButton
                    android:id="@+id/rbMakananBerat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ› Makanan Berat"
                    android:padding="12dp"
                    android:checked="true"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/light_gray"
                android:layout_marginBottom="8dp">

                <RadioButton
                    android:id="@+id/rbMinuman"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ¥¤ Minuman"
                    android:padding="12dp"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/light_gray"
                android:layout_marginBottom="8dp">

                <RadioButton
                    android:id="@+id/rbSnack"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸª Snack"
                    android:padding="12dp"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/light_gray">

                <RadioButton
                    android:id="@+id/rbLainnya"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“¦ Lainnya"
                    android:padding="12dp"/>

            </androidx.cardview.widget.CardView>

        </RadioGroup>

        <!-- Description -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Deskripsi Menu (Opsional)"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/text_dark"
            android:layout_marginBottom="8dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/light_gray">

            <EditText
                android:id="@+id/etMenuDescription"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:hint="Ceritakan tentang menu ini..."
                android:inputType="textMultiLine|textCapSentences"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:background="@android:color/transparent"
                android:textSize="15sp"
                android:gravity="top"
                android:maxLength="200"/>

        </androidx.cardview.widget.CardView>

        <!-- Note -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ’¡ Tip: Berikan deskripsi yang menarik untuk meningkatkan penjualan!"
            android:textSize="12sp"
            android:textColor="@color/text_gray"
            android:layout_marginTop="12dp"/>

    </LinearLayout>

</ScrollView>