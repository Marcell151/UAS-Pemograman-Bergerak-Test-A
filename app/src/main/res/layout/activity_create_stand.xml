<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@color/primary"
            android:paddingStart="32dp"
            android:paddingEnd="32dp"
            android:paddingTop="32dp"
            android:paddingBottom="24dp">

            <!-- Decorative Circle -->
            <View
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="-30dp"
                android:layout_marginEnd="-40dp"
                android:alpha="0.1"
                android:background="@android:drawable/button_onoff_indicator_on"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_centerInParent="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸª"
                    android:textSize="48sp"
                    android:layout_marginBottom="12dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Buat Stand Baru"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mulai berjualan di Kantin Kampus"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:alpha="0.9"
                    android:layout_marginTop="8dp"/>

            </LinearLayout>

        </RelativeLayout>

        <!-- Form -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:layout_marginTop="-30dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="24dp"
                app:cardElevation="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <!-- User Info -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="@color/light_orange"
                        android:layout_marginBottom="24dp">

                        <TextView
                            android:id="@+id/tvUserInfo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Pemilik: -"
                            android:textSize="13sp"
                            android:textColor="@color/text_dark"
                            android:padding="16dp"/>

                    </androidx.cardview.widget.CardView>

                    <!-- Info Box -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="@color/info"
                        android:layout_marginBottom="24dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="â„¹ï¸ Penting!"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="@color/white"
                                android:layout_marginBottom="8dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="â€¢ Setiap penjual hanya boleh memiliki 1 stand\nâ€¢ Nama stand harus unik dan menarik\nâ€¢ Stand tidak bisa dihapus setelah dibuat"
                                android:textSize="12sp"
                                android:textColor="@color/white"
                                android:lineSpacingExtra="4dp"/>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <!-- Stand Name -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nama Stand"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_dark"
                        android:layout_marginBottom="8dp"/>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="@color/light_gray"
                        android:layout_marginBottom="20dp">

                        <EditText
                            android:id="@+id/etStandName"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:hint="Contoh: Warung Nasi Bu Sari"
                            android:inputType="textCapWords"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            android:background="@android:color/transparent"
                            android:textSize="15sp"
                            android:maxLength="50"/>

                    </androidx.cardview.widget.CardView>

                    <!-- Stand Description -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Deskripsi Stand"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_dark"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ’¡ Ceritakan tentang stand Anda (opsional)"
                        android:textSize="12sp"
                        android:textColor="@color/text_gray"
                        android:layout_marginBottom="8dp"/>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="@color/light_gray"
                        android:layout_marginBottom="32dp">

                        <EditText
                            android:id="@+id/etStandDescription"
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:hint="Contoh: Menyediakan nasi dengan berbagai lauk pauk pilihan. Harga terjangkau untuk mahasiswa."
                            android:inputType="textMultiLine|textCapSentences"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            android:paddingTop="16dp"
                            android:paddingBottom="16dp"
                            android:background="@android:color/transparent"
                            android:textSize="15sp"
                            android:gravity="top"
                            android:maxLength="200"/>

                    </androidx.cardview.widget.CardView>

                    <!-- Create Button -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="4dp"
                        app:cardBackgroundColor="@color/primary"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:id="@+id/btnCreateStand"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:text="ðŸª Buat Stand"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:clickable="true"
                            android:foreground="?android:attr/selectableItemBackground"/>

                    </androidx.cardview.widget.CardView>

                    <!-- Terms -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Dengan membuat stand, Anda menyetujui untuk:\nâ€¢ Menjual makanan/minuman halal dan aman\nâ€¢ Menjaga kualitas produk\nâ€¢ Melayani pembeli dengan baik"
                        android:textSize="11sp"
                        android:textColor="@color/text_gray"
                        android:gravity="center"
                        android:lineSpacingExtra="4dp"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>

</ScrollView>