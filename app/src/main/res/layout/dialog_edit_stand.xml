<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp">

    <!-- Title (will be set by AlertDialog) -->

    <!-- Stand Name -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nama Stand"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/text_dark"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@color/light_gray"
        android:layout_marginBottom="16dp">

        <EditText
            android:id="@+id/etStandName"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:hint="Nama stand"
            android:inputType="textCapWords"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:background="@android:color/transparent"
            android:textSize="15sp"
            android:maxLength="50"/>

    </androidx.cardview.widget.CardView>

    <!-- Stand Description -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Deskripsi Stand"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/text_dark"
        android:layout_marginBottom="8dp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@color/light_gray">

        <EditText
            android:id="@+id/etStandDescription"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:hint="Deskripsi stand (opsional)"
            android:inputType="textMultiLine|textCapSentences"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:background="@android:color/transparent"
            android:textSize="15sp"
            android:gravity="top"
            android:maxLength="200"/>

    </androidx.cardview.widget.CardView>

    <!-- Note -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ðŸ’¡ Perubahan akan langsung terlihat oleh pembeli"
        android:textSize="12sp"
        android:textColor="@color/text_gray"
        android:layout_marginTop="12dp"/>

</LinearLayout>