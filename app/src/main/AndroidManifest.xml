<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.kantinkampus">

    <!-- Permissions -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Kantin KampusKu"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.DarkActionBar">

        <!-- LAUNCHER -->
        <activity
            android:name=".LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Auth -->
        <activity android:name=".RegisterActivity" />

        <!-- SELLER -->
        <activity android:name=".SellerDashboardActivity" />
        <activity android:name=".MyStandActivity" />
        <activity android:name=".CreateStandActivity" />
        <activity android:name=".SellerManageMenusActivity" />
        <activity android:name=".SellerManageOrdersActivity" />
        <activity android:name=".SellerStatisticsActivity" />
        <activity android:name=".SellerProfileActivity" />

        <!-- BUYER -->
        <activity android:name=".MainActivity" />
        <activity android:name=".StandListActivity" />
        <activity android:name=".MenuListActivity" />
        <activity android:name=".MenuDetailActivity" />
        <activity android:name=".CartActivity" />
        <activity android:name=".CheckoutActivity" />
        <activity android:name=".BuyerOrdersActivity" />
        <activity android:name=".FavoritesActivity" />
        <activity android:name=".AddReviewActivity" />

        <!-- SHARED -->
        <activity android:name=".NotificationsActivity" />

    </application>

</manifest>